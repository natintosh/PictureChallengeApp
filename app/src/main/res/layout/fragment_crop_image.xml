<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.CropImageFragment">

    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cropAspectRatioX="1"
        app:cropAspectRatioY="1"
        app:cropAutoZoomEnabled="true"
        app:cropFixAspectRatio="true"
        app:cropGuidelines="on"
        app:cropShape="rectangle"
        custom:cropMinCropResultHeightPX="100"
        custom:cropMinCropResultWidthPX="100" />

</LinearLayout>